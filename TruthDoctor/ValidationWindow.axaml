<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="TruthDoctor.ValidationWindow"
        Title="Network Validation"
        Width="900"
        Height="650">

    <Grid Margin="15" RowDefinitions="Auto,Auto,Auto,*">

        <!-- Header -->
        <TextBlock Text="Network Validation &amp; Troubleshooting"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <!-- Summary -->
        <Border Background="#1e293b"
                Padding="10"
                CornerRadius="6"
                Grid.Row="1"
                Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Spacing="20">
                <TextBlock Name="ScoreText"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"/>
                <TextBlock Name="PassText"
                           Foreground="#22c55e"
                           FontWeight="Bold"/>
                <TextBlock Name="FailText"
                           Foreground="#ef4444"
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Timestamp -->
        <TextBlock Name="TimestampText"
                   Grid.Row="2"
                   Margin="0,0,0,10"
                   Opacity="0.8"/>

        <!-- Results Table -->
        <DataGrid Name="ResultsGrid"
                  Grid.Row="3"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Height="450"/>
    </Grid>
</Window>
